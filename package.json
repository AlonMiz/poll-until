{
  "name": "poll-until-promise",
  "version": "1.3.2",
  "description": "Try repeatedly for a promise to be resolved",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlonMiz/poll-until-promise.git"
  },
  "bugs": {
    "url": "https://github.com/AlonMiz/poll-until-promise"
  },
  "homepage": "https://github.com/AlonMiz/poll-until-promise#readme",
  "scripts": {
    "build": "cross-env WEBPACK_ENV=build webpack",
    "dev": "cross-env WEBPACK_ENV=dev webpack --progress --colors --watch",
    "test": "cross-env NODE_ENV=test nyc mocha --colors --exit ./test/*.spec.js",
    "test-dev": "cross-env NODE_ENV=test nyc mocha --colors -w ./test/*.spec.js",
    "release": "npm run test && npm run build && cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "wait",
    "until",
    "promise"
  ],
  "author": "Alon Mizrahi",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.14.0",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.9.0",
    "webpack": "^3.12.0"
  },
  "nyc": {
    "reporter": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": true
  }
}
